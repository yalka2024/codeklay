{
  "name": "codepal-vscode-extension",
  "displayName": "CodePal AI",
  "description": "Connect VS Code to CodePal for AI codegen, review, and chat.",
  "version": "0.1.0",
  "publisher": "your-org",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:codepal.connect",
    "onCommand:codepal.codegen",
    "onCommand:codepal.review"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codepal.connect",
        "title": "CodePal: Connect"
      },
      {
        "command": "codepal.codegen",
        "title": "CodePal: Generate Code"
      },
      {
        "command": "codepal.review",
        "title": "CodePal: Review Code"
      }
    ]
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "vsce": "^2.15.0"
  }
} 