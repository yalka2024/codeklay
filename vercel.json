{
  "buildCommand": "npm run vercel-build",
  "installCommand": "corepack enable && pnpm install --no-frozen-lockfile",
  "framework": "nextjs",
  "packageManager": "pnpm@10.11.0",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "COREPACK_ENABLE": "1",
      "PNPM_HOME": "/opt/homebrew/bin",
      "PATH": "/opt/homebrew/bin:$PATH"
    }
  }
} 