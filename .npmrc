# Enable pnpm support
legacy-peer-deps=true
engine-strict=false
# Use pnpm as primary package manager
package-manager=pnpm@10.0.0
# Allow pnpm to work
prefer-npm=false
# Enable workspace detection for pnpm
workspaces=true
# Additional pnpm settings
save-exact=false
save-prefix=^
# Enable scripts for pnpm
ignore-scripts=false 