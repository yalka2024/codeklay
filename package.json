{
  "name": "codepal-platform",
  "version": "1.0.0",
  "description": "Next-generation AI-powered development platform with personalized learning, decentralized collaboration, AR/VR coding, and cross-platform code fusion",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "vercel-build": "corepack enable && pnpm install --no-frozen-lockfile && pnpm run build",
    "test": "echo 'Tests not configured'",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist node_modules",
    "setup": "corepack enable && pnpm install && pnpm run build",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "validate-lockfile": "pnpm install --frozen-lockfile || echo 'Lockfile is outdated - run pnpm install to update'",
    "regenerate-lockfile": "if exist pnpm-lock.yaml del pnpm-lock.yaml && pnpm install",
    "postinstall": "echo 'Lockfile validated with pnpm@10.0.0'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yalka2024/codeklay.git"
  },
  "keywords": [
    "ai",
    "coding",
    "collaboration",
    "ar-vr",
    "blockchain",
    "marketplace",
    "learning",
    "development-platform"
  ],
